    "db:seed": "prisma db seed",
    "content:assets": "tsx scripts/generate-ef01-assets.ts",
    "content:lint": "tsx scripts/content.ts lint",
    "content:report": "tsx scripts/content.ts report",
    "content:build": "pnpm content:assets && tsx scripts/content.ts build",
    "bncc:validate": "tsx scripts/validate-content.ts",
    "bncc:build": "tsx scripts/bncc.ts",
    "check": "pnpm content:lint && pnpm lint && pnpm content:build -- --no-write && pnpm type-check && pnpm test"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss,pcss}": [
      "prettier --write"
    ]
